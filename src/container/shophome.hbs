<div class="row p-4">
    <div class="mb-3">
    {{#with navigation}}
       <div class="col-12">
            <div class="card">
                <div class="nav flex-tabs">
                    {{#each links}}
                        <a href="{{href}}" class="nav-link m-2">{{text}}</a>
                    {{/each}}
                    <a href="/#" class="nav-link disabled m-2">Disabled</a>
                </div>  
            </div>
        </div>
    {{/with}}
    </div>
    <div class="mb-5">
        {{#with newsBlock}}
            <h2 class="text-center m-4">{{title}}</h2> 
            <div class="row gx-2 gy-2">
                {{#each cards}}
                    <div class="col-3">
                        <div class="card text-bg-secondary">
                            <div class="card-header mb-3"> 
                                {{title}} 
                                {{#if isTop}}
                                <div class="badge text-bg-danger rounded-pill">isTop</div>
                                {{else}}
                                {{/if}} 
                                {{#if isNew}}
                                <div class="badge text-bg-success rounded-pill">isNew</div>
                                {{else}}
                                {{/if}} 
                            </div>
                            <p class="ms-3 me-4">
                                {{description}}
                            </p>
                        </div>
                    </div>   
                {{/each}}
            </div>                
        {{/with}}
    </div>
    <hr>
    <div class="row mb-5">
        {{#with goodsBlock}}
            <div class="col-12">
                <div class="nav nav-tabs mb-4 mt-4">
                    {{#each tabs}}
                        <div class="nav-item">
                            {{#if isActive}}
                                <a href="/#" class="nav-link active">{{text}}</a>
                            {{else}}
                                <a href="/#" class="nav-link">{{text}}</a>
                            {{/if}}
                        </div>
                    {{/each}} 
                </div>
            </div>
            
                {{#each cards}}
                    <div class="col-4">
                    <div class="card" > 
                        <div class="card-body">
                            <img class="card-img-top" src="{{image}}">
                                <h3 class="card-title">{{title}}</h3>
                                {{#if isHot}}
                                    <div class="badge text-bg-warning rounded-pill">HOT!</div>
                                {{else}}
                                {{/if}} 
                                {{#if isNew}}
                                    <div class="badge text-bg-info rounded-pill">Нове</div>
                                {{else}}
                                {{/if}}
                            <p class="card-body">{{description}}</p>
                        </div>
                    </div>  
                    </div>   
                {{/each}}
                           
        {{/with}}
    </div>
    <hr>
    <div class="col-12 mb-4 mt-4">
        {{#with subscribe}}
            <div class="card text-bg-secondary p-2">
                <h2>{{header}}</h2>  
                <p>{{description}}</p>
                <div class="col-4">
                    {{#each buttons}}
                        <div class="mb-2"><a href="{{link}}" class="btn btn-primary">{{text}}</a></div>
                    {{/each}}
                </div>
            </div>  
        {{/with}}   
    </div>
    <hr class="mt-3">
    <div class="col-12 mt-4">
        {{#with service}}
            <div class="card text-bg-success text-center p-2">
                <h2>{{title}}</h2>  
                <p>{{description}}</p>
                <div class="text-center">
                    {{#each buttons}}
                        <div class="mb-2"><a href="{{link}}" class="btn btn-primary">{{text}}</a></div>
                    {{/each}}
                </div>
            </div>  
        {{/with}}   
    </div>
    <hr class="mt-3 mb-3">
    
         <div class="row gy-5 gx-5 mt-4">
                      
        {{#each footer}}         
       
             
                <div class="col-2"> 
                    {{#each this}}
                        <div class="mb-5">
                            <a href="{{link}}" class="btn btn-link">{{text}}</a>
                        </div>
                    {{/each}}
                </div>
                  
            
         
        {{/each}}
        
        </div>
    
        
             
</div>