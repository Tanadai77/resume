{{#each goodsBlock}}
            <div class="card mb-2">
                <div class="card-body">
                    <div class="col-12">
                        <div class="row">       
                            <div class="col-2">
                                <img src="{{image}}">
                            </div>                 
                            <div class="col-4">
                                <h5>{{name}}</h5>
                                <div>{{description}}</div>
                            </div> 
                            <div class="col-2">
                                {{#with price}}
                                   <div>{{title}}:</div>
                                   <h5>{{value}}</h5>
                                {{/with}}
                            </div>                       
                            <div class="col-2">{{amount}}</div>
                            <div class="col-2">
                                {{#each buttons}}
                                    {{#if this.isPrimary}}
                                        <div class="btn btn-primary mb-2">{{text}}</div>
                                    {{else this.isDanger}}
                                        <div class="btn btn-outline-danger mb-2">{{text}}</div>
                                    {{/if}}  
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}  